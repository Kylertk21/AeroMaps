<h1>Create Comment</h1>
<% form_with(model: [@forum_post, @forum_post.comments.build], local: true) do |form| %>
    <div class "field">
        <%= form.label :body, "Your Comment" %>
        <%= form.text_area :body, rows: 5 %>
    </div>

    <div class="actions">
        <%= form.submit "Post Comment" %>
    </div>
<% end %>
