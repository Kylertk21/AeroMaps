<%= form_with(url:forum_posts_path, method: :get, local: true, class: "form-inline") do |form| %>
<div class="mt-3 mb-4 ms-4" aria-label="Search By Topic Field">
    <%= form.label :search, "Search by Topic", class: "form-label" %>
    <%= form.text_field :search, placeholder: "Search by topic", class: "form-control" %>
    <%= form.submit "Search", class: "btn btn-primary mt-2" %>
    <%= link_to "Show All", forum_posts_path, class: "btn btn-success mt-2" %>
    <% end %>
</div>