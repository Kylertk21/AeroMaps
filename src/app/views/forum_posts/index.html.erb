<div class="d-flex flex-column align-items-center justify-content-center">

<p style="color: green"><%= notice %></p>

<h1>Forum posts</h1>

<%= render "search_form", search_params: @search_params %>

<div id="forum_posts" class="container bg-light">
  <% @forum_posts.each do |forum_post| %>
    <%= render forum_post %>
    <p>
      <%= link_to "Show this forum post", forum_post, class: "btn btn-secondary btn-sm" %>
    </p>
  <% end %>
</div>

<%= link_to "New forum post", new_forum_post_path, method: :get, class: "btn btn-warning" %>
</div>