<div id="<%= dom_id forum_post %>" class="container border border-dark rounded p-3 my-4">
  
  <p>
    <strong class="text-primary">Pilot: </strong>
    <%= forum_post.pilot_profile&.first_name%>
  </p>

  <p>
    <strong class="text-success">Post topic:</strong>
    <%= forum_post.post_topic %>
  </p>

  <p>
    <strong class="text-secondary">Post text:</strong>
    <%= forum_post.post_text %>
  </p>
</div>

<h3>Comments</h3>
  <% forum_post.comments.each do |comment| %>
    <div class="container border border-warning rounded p-3 my-4" >
      <p><strong class="text-primary">Pilot:</strong> <%= comment.pilot_profile&.first_name %></p>
      <p><strong class="text-secondary">Commented:</strong> <%= comment.body %></p>
    </div>
  <% end %>

