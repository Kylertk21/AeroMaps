<!DOCTYPE html>
<html>
  <head>
    <title>Src</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Include Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    
    <!-- Include Leaflet via CDN -->
    <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"></script>

    <!-- Windy API CDN -->
    <script src="https://api.windy.com/assets/map-forecast/libBoot.js"></script>
    
    <%= javascript_importmap_tags %>

  <body>

    
  <header class="container-fluid bg-dark mb-5">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid justify-content-center">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>

      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <ul class="navbar-nav text-center">
          <li class="nav-item">
            <%= link_to 'Home', root_path, method: :get, class: 'btn btn-dark nav-link text-white' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Profile', profile_path, method: :get, class: 'btn btn-dark nav-link text-white' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Flight Plans', flight_plans_path, method: :get, class: 'btn btn-dark nav-link text-white' %> 
          </li>
          <li class="nav-item">
            <%= link_to 'Forum', forum_posts_path, method: :get, class: 'btn btn-dark nav-link text-white' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Map', map_path, method: :get, class: 'btn btn-dark nav-link text-white' %>
          </li>
          <li class="nav-item">
            <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-dark nav-link text-white' %>
          </li>
        </ul>
        </div>
      </div>
      </nav>
  </header>
  
  <!-- Flash Messages -->
  <div class="container mt-3">
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key == 'alert' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>

  <%= yield %>

  </body>
</html>
